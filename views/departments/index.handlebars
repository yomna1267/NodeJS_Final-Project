<h1 style="text-align: center;">Departments</h1>
<table style="width:100%">
    {{#each departments}}
    <tr>
        <td style="width:50%">
            {{name}}
        </td>
        <td>
            <a href="/departments/{{_id}}">
                <button class="btn btn-info">Details</button>
            </a>

        </td>
    </tr>
    {{/each}}
</table>
<br>
<a href="/departments/create">
    <button class="btn btn-dark">Add</button>
</a>