<html>

<head>
  <style>
    /* Use the same style as the login page */
    @import url('https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700');

    body {
      margin: 0;
      padding: 0;
      font-family: 'Poppins', sans-serif;
      background-image: url('https://images.unsplash.com/photo-1508615070457-7baeba4003e1?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80');
      background-size: cover;
      background-position: center;
    }

    .container {
      width: 400px;
      height: 535;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background-color: white;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .title {
      text-align: center;
      margin-top: 30px;
      font-size: 24px;
      font-weight: 500;
      color: #333333;
    }

    form {
      width: 80%;
      margin: 0 auto;
      padding-top: 20px;
    }

    input[type=text],
    input[type=password],
    input[type=email] {
      width: 100%;
      box-sizing: border-box;
      margin-bottom: 20px;
      padding: 15px;
      border: none;
      outline: none;
      font-size: 16px;
      border-bottom: 2px solid #cccccc;
    }

    input[type=text]:focus,
    input[type=password]:focus,
    input[type=email]:focus {
      border-color: #0099ff;
    }

    input[type=radio] {
      display: none;
    }

    label {
      display: inline-block;
      width: calc(100% / 3.9);
      text-align: center;
      padding: 10px;
      cursor: pointer;
      font-size: 16px;
      color: #999999;
    }

    label:hover {
      color: #0099ff;
    }

    input[type=radio]:checked+label {
      color: #0099ff;
    }

    button[type=submit] {
      width: 100%;
      background-color: #0099ff;
      color: white;
      padding: 15px;
      border-radius: 5px;
      border: none;
      cursor: pointer;
      font-size: 18px;
    }

    button[type=submit]:hover {
      opacity: 0.8;
    }

    .footer {
      text-align: center;
      margin-top: 20px;
      font-size: 14px;
      color: #999999;
    }

    .footer a {
      color: #0099ff;
      text-decoration: none;
    }

    .footer a:hover {
      text-decoration: underline;
    }
  </style>
</head>

<body>

  <!-- Create a container for the form -->
  <div class="container">

    <!-- Create a title for the form -->
    <h1 class="title">Register Form</h1>

    <!-- Create a form element -->
    <form action="/register" , method="POST">

      <!-- Create a text field for the username -->
      <input type="text" id="username" name="username" placeholder="Enter your username" required>

      <!-- Create a text field for the email -->
      <input type="email" id="email" name="email" placeholder="Enter your email" required>

      <!-- Create a text field for the password -->
      <input type="password" id="password" name="password" placeholder="Enter your password" required>

      <!-- Create three radio buttons to detect the role -->
      <p>Choose your role:</p>
      <input type="radio" id="student" name="role" value="student" checked>
      <label for="student">Student</label>
      <input type="radio" id="doctor" name="role" value="doctor" style="margin-left: 10%;">
      <label for="doctor" style="margin-left: 10%;">doctor</label>
      <input type="radio" id="admin" name="role" value="admin" style="margin-left: 10%;">
      <label for="admin" style="margin-left: 10%;">Admin</label>

      <!-- Create a submit button -->
      <button type="submit" value="Register"> Register </button>

    </form>

    <!-- Create a footer text -->
    <p class="footer">Already have an account? <a href="http://localhost:5000/login">Login</a></p>

  </div>

</body>

</html>