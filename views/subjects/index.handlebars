<h1 style="text-align: center;">Subjects</h1>
<table style="width:100%">
    <tr>
        <th>
            <h4>Subject_Name</h4>
        </th>
        <th>
            <h4>number_of_enrolled_students</h4>
        </th>
        <th>
            <h4>Details </h4>
        </th>
        <th>
            <h4>Edit</h4>
        </th>
        <th>
            <h4>Delete</h4>
        </th>

        {{#each subjects}}
    <tr>
        <td style="width:50%">
            {{name}}
        </td>
        <td> {{ number_of_enrolled_students}}  </td>

        <td>
            <a href="/subjects/{{_id}}">
                <button class="btn btn-info" style="align-items: right;">Details</button>
            </a>


        </td>
        <td>
            <a href="/subjects/{{_id}}/edit">
                <button class="btn btn-info" style="align-items: right;">Edit</button>
            </a>
        </td>
        <td>
            <form action='/subjects/{{_id}}?_method=DELETE' method="post">
                <button type="submit" class="btn btn-info" style="align-items: right;"  >Delete</button>
            </form>
         </td>
    </tr>
    {{/each}}
</table>
<br>
<a href="/subjects/create">
    <button class="btn btn-dark">Add</button>
</a>